{
	"name": "Auto Gropy",
	"description": "Auto Grouping Extension for Chrome",
	"homepage_url": "https://github.com/MukeshKumar78/chrome-auto-grouping",
	"version": "1.0.0",
	"manifest_version": 3,
	"action": {
	  "default_title": "Group",
	  "default_icon": {
		  "16": "icon.png",
		  "24": "icon.png",
		  "32": "icon.png"
	  },
	  "default_popup": "popup.html"
	},
	"content_scripts": [
	  {
		"run_at" : "document_start",
		"js": ["before.js"],
		"matches": [
		  "https://*/*",
		  "http://*/*"
		]
	  },
	  {
		"run_at" : "document_idle",
		"js": ["after.js"],
		"matches": [
		  "https://*/*",
		  "http://*/*"
		]
	  }
	],
	"permissions": [
	  "tabs",
	  "tabGroups",
	  "scripting"
	],
	"host_permissions": [
	  "https://*/*",
	  "http://*/*"
	]
  }